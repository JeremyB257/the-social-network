{% extends 'base.html.twig' %}

{% block title %}Connexion - {{ parent() }}{% endblock %}

{% block body %}
    {% if error %}
        <div class="w-1/2 mx-auto bg-red-600 text-red-100 px-3 py-4 rounded mb-6">
            {{ error.messageKey|trans(error.messageData, 'security') }}
        </div>
    {% endif %}

    <h1 class="text-center text-2xl font-bold mb-5">Connexion</h1>

    <form method="post" class="w-1/2 mx-auto">
        <div class="mb-6">
            <label for="email" class="block text-gray-800 text-sm font-semibold">Email:</label>
            <input class="mt-1 w-full rounded-lg border-gray-200" type="email" id="email" name="email" value="{{ last_username }}" />
        </div>

        <div class="mb-3">
            <label for="password" class="block text-gray-800 text-sm font-semibold">Mot de passe:</label>
            <input class="mt-1 w-full rounded-lg border-gray-200" type="password" id="password" name="password" />
        </div>

        <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

        {#
            Uncomment this section and add a remember_me option below your firewall to activate remember me functionality.
            See https://symfony.com/doc/current/security/remember_me.html

            <div class="checkbox mb-3">
                <label>
                    <input type="checkbox" name="_remember_me"> Remember me
                </label>
            </div>
        #}

        <button class="block w-full bg-blue-500 text-white px-4 py-2 rounded-lg hover:bg-blue-600 duration-300">Connexion</button>
    </form>
{% endblock %}
